{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "polandcentral",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "SQL Server administrator login"
      }
    },
    "sqlAdministratorPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server administrator password"
      }
    },
    "containerRegistryServer": {
      "type": "string",
      "defaultValue": "ghcr.io"
    },
    "containerRegistryUsername": {
      "type": "string"
    },
    "containerRegistryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Container registry password"
      }
    },
    "openAiApiKey": {
      "type": "securestring"
    },
    "authenticationSecretKey": {
      "type": "securestring"
    },
    "authenticationAudience": {
      "type": "string"
    },
    "authenticationIssuer": {
      "type": "string"
    },
    "smtpHost": {
      "type": "string"
    },
    "smtpPort": {
      "type": "int",
      "defaultValue": 587
    },
    "smtpUser": {
      "type": "string"
    },
    "smtpPassword": {
      "type": "securestring"
    },
    "smtpFromEmail": {
      "type": "string"
    },
    "exchangeRateApiUrl": {
      "type": "string"
    },
    "exchangeRateApiEndpoint": {
      "type": "string"
    },
    "exchangeRateApiAppId": {
      "type": "securestring"
    },
    "rabbitMqUsername": {
      "type": "string"
    },
    "rabbitMqPassword": {
      "type": "securestring"
    },
    "redisPassword": {
      "type": "securestring"
    },
    "llmProcessorApiToken": {
      "type": "securestring"
    },
    "backendImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "frontendImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "llmProcessorImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "gatewayImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "environment": {
      "type": "string",
      "defaultValue": "production",
      "allowedValues": ["development", "staging", "production"],
      "metadata": {
        "description": "Environment name for resource tagging"
      }
    }
  },
  "variables": {
    "resourcePrefix": "finance-app",
    "managedEnvironmentName": "FinanceApp",
    "commonTags": {
      "Environment": "[parameters('environment')]",
      "Project": "FinanceApp",
      "ManagedBy": "ARM-Template",
      "CostCenter": "Finance"
    },
    "logAnalyticsWorkspaceName": "[concat(variables('resourcePrefix'), '-logs')]",
    "sqlServerName": "projects-server-sziszka90",
    "sqlDatabaseName": "FinanceAppDB",
    "containerAppBackendName": "finance-app-backend",
    "containerAppFrontendName": "finance-app-frontend",
    "containerAppCacheName": "finance-app-cache",
    "containerAppRabbitMQName": "finance-app-rabbitmq",
    "containerAppLLMProcessorName": "finance-app-llmprocessor",
    "containerAppGatewayName": "finance-app-gateway",
    "cacheConnectionString": "[concat(variables('containerAppCacheName'), ':6379,password=', parameters('redisPassword'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2025-07-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30,
        "features": {
          "legacy": 0,
          "searchVersion": 1,
          "enableLogAccessUsingOnlyResourcePermissions": true
        },
        "workspaceCapping": {
          "dailyQuotaGb": -1
        },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2026-01-01",
      "name": "[variables('managedEnvironmentName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2025-07-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2025-07-01').primarySharedKey]"
          }
        },
        "zoneRedundant": false,
        "workloadProfiles": [
          {
            "workloadProfileType": "Consumption",
            "name": "Consumption"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2023-08-01",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled",
        "restrictOutboundNetworkAccess": "Disabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2023-08-01",
      "name": "[concat(variables('sqlServerName'), '/', variables('sqlDatabaseName'))]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 2
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 34359738368,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "autoPauseDelay": 60,
        "requestedBackupStorageRedundancy": "Local",
        "minCapacity": 0.5,
        "isLedgerOn": false,
        "useFreeLimit": true,
        "freeLimitExhaustionBehavior": "BillOverUsage"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2023-08-01",
      "name": "[concat(variables('sqlServerName'), '/AllowAzureServices')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppBackendName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'Backend', 'Service', variables('containerAppBackendName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppCacheName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppRabbitMQName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppLLMProcessorName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 8080,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('containerRegistryPassword')]"
            },
            {
              "name": "openai-api-key",
              "value": "[parameters('openAiApiKey')]"
            },
            {
              "name": "auth-secret-key",
              "value": "[parameters('authenticationSecretKey')]"
            },
            {
              "name": "smtp-password",
              "value": "[parameters('smtpPassword')]"
            },
            {
              "name": "exchange-rate-api-app-id",
              "value": "[parameters('exchangeRateApiAppId')]"
            },
            {
              "name": "rabbitmq-password",
              "value": "[parameters('rabbitMqPassword')]"
            },
            {
              "name": "llm-processor-api-token",
              "value": "[parameters('llmProcessorApiToken')]"
            },
            {
              "name": "cache-connection-string",
              "value": "[variables('cacheConnectionString')]"
            },
            {
              "name": "sql-connection-string",
              "value": "[concat('Server=tcp:', reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName')), '2023-08-01').fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('sqlDatabaseName'), ';Persist Security Info=False;User ID=', parameters('sqlAdministratorLogin'), ';Password=', parameters('sqlAdministratorPassword'), ';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "backend",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppBackendName'), ':', parameters('backendImageTag'))]",
              "env": [
                {
                  "name": "ConnectionStrings__MsSql",
                  "secretRef": "sql-connection-string"
                },
                {
                  "name": "LLMClientSettings__ApiKey",
                  "secretRef": "openai-api-key"
                },
                {
                  "name": "AuthenticationSettings__SecretKey",
                  "secretRef": "auth-secret-key"
                },
                {
                  "name": "AuthenticationSettings__Audience",
                  "value": "[parameters('authenticationAudience')]"
                },
                {
                  "name": "AuthenticationSettings__Issuer",
                  "value": "[parameters('authenticationIssuer')]"
                },
                {
                  "name": "SmtpSettings__SmtpHost",
                  "value": "[parameters('smtpHost')]"
                },
                {
                  "name": "SmtpSettings__SmtpPort",
                  "value": "[string(parameters('smtpPort'))]"
                },
                {
                  "name": "SmtpSettings__SmtpUser",
                  "value": "[parameters('smtpUser')]"
                },
                {
                  "name": "SmtpSettings__SmtpPass",
                  "secretRef": "smtp-password"
                },
                {
                  "name": "SmtpSettings__FromEmail",
                  "value": "[parameters('smtpFromEmail')]"
                },
                {
                  "name": "ExchangeRateSettings__ApiUrl",
                  "value": "[parameters('exchangeRateApiUrl')]"
                },
                {
                  "name": "ExchangeRateSettings__ApiEndpoint",
                  "value": "[parameters('exchangeRateApiEndpoint')]"
                },
                {
                  "name": "ExchangeRateSettings__AppId",
                  "secretRef": "exchange-rate-api-app-id"
                },
                {
                  "name": "RabbitMqSettings__HostName",
                  "value": "[variables('containerAppRabbitMQName')]"
                },
                {
                  "name": "RabbitMqSettings__Port",
                  "value": "5672"
                },
                {
                  "name": "RabbitMqSettings__UserName",
                  "value": "[parameters('rabbitMqUsername')]"
                },
                {
                  "name": "RabbitMqSettings__Password",
                  "secretRef": "rabbitmq-password"
                },
                {
                  "name": "LLMProcessorSettings__Token",
                  "secretRef": "llm-processor-api-token"
                },
                {
                  "name": "LLMProcessorSettings__ApiUrl",
                  "value": "[concat('http://', variables('containerAppLLMProcessorName'))]"
                },
                {
                  "name": "CacheSettings__ConnectionString",
                  "secretRef": "cache-connection-string"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 300,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppFrontendName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'Frontend', 'Service', variables('containerAppFrontendName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "http",
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('containerRegistryPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "frontend",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppFrontendName'), ':', parameters('frontendImageTag'))]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 300,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "http": {
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppCacheName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'Cache', 'Service', variables('containerAppCacheName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 6379,
            "transport": "tcp"
          },
          "secrets": [
            {
              "name": "redis-password",
              "value": "[parameters('redisPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "redis",
              "image": "docker.io/redis:latest",
              "command": [
                "redis-server",
                "--requirepass",
                "[parameters('redisPassword')]"
              ],
              "resources": {
                "cpu": 0.25,
                "memory": "0.5Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 1
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppRabbitMQName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'Messaging', 'Service', variables('containerAppRabbitMQName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 5672,
            "transport": "tcp"
          },
          "secrets": [
            {
              "name": "rabbitmq-password",
              "value": "[parameters('rabbitMqPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "rabbitmq",
              "image": "docker.io/rabbitmq:3-management",
              "env": [
                {
                  "name": "RABBITMQ_DEFAULT_USER",
                  "value": "[parameters('rabbitMqUsername')]"
                },
                {
                  "name": "RABBITMQ_DEFAULT_PASS",
                  "secretRef": "rabbitmq-password"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 1
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppLLMProcessorName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'AI', 'Service', variables('containerAppLLMProcessorName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 8080,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('containerRegistryPassword')]"
            },
            {
              "name": "llm-processor-api-token",
              "value": "[parameters('llmProcessorApiToken')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "llmprocessor",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppLLMProcessorName'), ':', parameters('llmProcessorImageTag'))]",
              "env": [
                {
                  "name": "ApiToken",
                  "secretRef": "llm-processor-api-token"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 300,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2026-01-01",
      "name": "[variables('containerAppGatewayName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), createObject('Component', 'Gateway', 'Service', variables('containerAppGatewayName')))]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppFrontendName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "transport": "http",
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('containerRegistryPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "gateway",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppGatewayName'), ':', parameters('gatewayImageTag'))]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 300,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "http": {
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "managedEnvironmentId": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName')), '2023-08-01').fullyQualifiedDomainName]"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
    },
    "backendUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppBackendName')), '2026-01-01').configuration.ingress.fqdn]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppFrontendName')), '2026-01-01').configuration.ingress.fqdn]"
    },
    "gatewayUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppGatewayName')), '2026-01-01').configuration.ingress.fqdn]"
    },
    "llmProcessorUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppLLMProcessorName')), '2026-01-01').configuration.ingress.fqdn]"
    },
    "cacheUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppCacheName')), '2026-01-01').configuration.ingress.fqdn]"
    },
    "rabbitMqUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppRabbitMQName')), '2026-01-01').configuration.ingress.fqdn]"
    }
  }
}
