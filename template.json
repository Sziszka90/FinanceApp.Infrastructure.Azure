{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "production",
      "allowedValues": ["development", "staging", "production"],
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "Poland Central",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "SQL Server administrator login"
      }
    },
    "sqlAdministratorPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server administrator password"
      }
    },
    "containerRegistryServer": {
      "type": "string",
      "defaultValue": "ghcr.io",
      "metadata": {
        "description": "Container registry server"
      }
    },
    "containerRegistryUsername": {
      "type": "string",
      "metadata": {
        "description": "Container registry username"
      }
    },
    "containerRegistryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Container registry password or token"
      }
    },
    "openAiApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "OpenAI API Key"
      }
    },
    "authenticationSecretKey": {
      "type": "securestring",
      "metadata": {
        "description": "JWT authentication secret key"
      }
    },
    "authenticationIssuer": {
      "type": "string",
      "defaultValue": "your-issuer",
      "metadata": {
        "description": "JWT issuer"
      }
    },
    "authenticationAudience": {
      "type": "string",
      "defaultValue": "your-audience",
      "metadata": {
        "description": "JWT audience"
      }
    },
    "smtpHost": {
      "type": "string",
      "defaultValue": "smtp.gmail.com",
      "metadata": {
        "description": "SMTP server host"
      }
    },
    "smtpPort": {
      "type": "int",
      "defaultValue": 587,
      "metadata": {
        "description": "SMTP server port"
      }
    },
    "smtpUser": {
      "type": "string",
      "metadata": {
        "description": "SMTP username"
      }
    },
    "smtpPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SMTP password"
      }
    },
    "smtpFromEmail": {
      "type": "string",
      "metadata": {
        "description": "Email address to send from"
      }
    },
    "exchangeRateApiUrl": {
      "type": "string",
      "defaultValue": "https://openexchangerates.org",
      "metadata": {
        "description": "Exchange rate API URL"
      }
    },
    "exchangeRateApiEndpoint": {
      "type": "string",
      "defaultValue": "/api/latest.json?app_id=",
      "metadata": {
        "description": "Exchange rate API endpoint"
      }
    },
    "exchangeRateApiAppId": {
      "type": "securestring",
      "metadata": {
        "description": "Exchange rate API app ID"
      }
    },
    "rabbitMqUsername": {
      "type": "string",
      "defaultValue": "admin",
      "metadata": {
        "description": "RabbitMQ username"
      }
    },
    "rabbitMqPassword": {
      "type": "securestring",
      "metadata": {
        "description": "RabbitMQ password"
      }
    },
    "redisPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Redis password"
      }
    },
    "llmProcessorApiToken": {
      "type": "securestring",
      "metadata": {
        "description": "LLM Processor API authentication token"
      }
    },
    "backendImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Backend container image tag"
      }
    },
    "frontendImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Frontend container image tag"
      }
    },
    "llmProcessorImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "LLM Processor container image tag"
      }
    },
    "gatewayImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Gateway container image tag"
      }
    }
  },
  "variables": {
    "resourcePrefix": "finance-app",
    "managedEnvironmentName": "FinanceApp",
    "logAnalyticsWorkspaceName": "[concat(variables('resourcePrefix'), '-logs')]",
    "sqlServerName": "projects-server-sziszka90",
    "sqlDatabaseName": "FinanceAppDB",
    
    "containerAppBackendName": "[concat(variables('resourcePrefix'), '-backend')]",
    "containerAppFrontendName": "[concat(variables('resourcePrefix'), '-frontend')]",
    "containerAppLLMProcessorName": "[concat(variables('resourcePrefix'), '-llmprocessor')]",
    "containerAppRabbitMQName": "[concat(variables('resourcePrefix'), '-rabbitmq')]",
    "containerAppCacheName": "[concat(variables('resourcePrefix'), '-cache')]",
    "containerAppGatewayName": "[concat(variables('resourcePrefix'), '-gateway')]",
    
    "sqlConnectionString": "[concat('Server=tcp:', variables('sqlServerName'), '.database.windows.net,1433;Initial Catalog=', variables('sqlDatabaseName'), ';Persist Security Info=False;User ID=', parameters('sqlAdministratorLogin'), ';Password=', parameters('sqlAdministratorPassword'), ';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
    "cacheConnectionString": "[concat(variables('containerAppCacheName'), ':6379,user=financeappuser,password=', parameters('redisPassword'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2025-02-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30,
        "features": {
          "legacy": 0,
          "searchVersion": 1,
          "enableLogAccessUsingOnlyResourcePermissions": true
        },
        "workspaceCapping": {
          "dailyQuotaGb": -1
        },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2025-02-02-preview",
      "name": "[variables('managedEnvironmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))).customerId]",
            "dynamicJsonColumns": true
          }
        },
        "zoneRedundant": false,
        "kedaConfiguration": {},
        "daprConfiguration": {},
        "customDomainConfiguration": {},
        "workloadProfiles": [
          {
            "workloadProfileType": "Consumption",
            "name": "Consumption",
            "enableFips": false
          }
        ],
        "peerAuthentication": {
          "mtls": {
            "enabled": false
          }
        },
        "peerTrafficConfiguration": {
          "encryption": {
            "enabled": false
          }
        },
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2023-08-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled",
        "restrictOutboundNetworkAccess": "Disabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat(variables('sqlServerName'), '/', variables('sqlDatabaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 2
      },
      "kind": "v12.0,user,vcore,serverless,freelimit",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 34359738368,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "autoPauseDelay": 60,
        "requestedBackupStorageRedundancy": "Local",
        "minCapacity": 0.5,
        "isLedgerOn": false,
        "useFreeLimit": true,
        "freeLimitExhaustionBehavior": "BillOverUsage",
        "availabilityZone": "NoPreference"
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppCacheName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
            "activeRevisionsMode": "Single",
            "ingress": {
              "external": false,
              "targetPort": 6379,
              "transport": "Tcp",
              "traffic": [
                {
                  "weight": 100,
                  "latestRevision": true
                }
              ],
              "allowInsecure": false,
              "stickySessions": {
                "affinity": "none"
              }
            },
            "maxInactiveRevisions": 100
        },
        "template": {
          "containers": [
            {
              "name": "[variables('containerAppCacheName')]",
              "image": "docker.io/redis:latest",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 300,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "tcp-scaler",
                "custom": {
                  "type": "tcp",
                  "metadata": {
                    "concurrentConnections": "10"
                  }
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppRabbitMQName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 15672,
            "transport": "Auto",
            "traffic": [
              {
                "weight": 100,
                "latestRevision": true
              }
            ],
            "allowInsecure": false
          },
          "maxInactiveRevisions": 100
        },
        "template": {
          "containers": [
            {
              "name": "[variables('containerAppRabbitMQName')]",
              "image": "docker.io/rabbitmq:3-management",
              "env": [
                {
                  "name": "RABBITMQ_DEFAULT_USER",
                  "value": "[parameters('rabbitMqUsername')]"
                },
                {
                  "name": "RABBITMQ_DEFAULT_PASS",
                  "secretRef": "rabbitmq-password"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 1,
            "cooldownPeriod": 1000,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        },
        "secrets": [
          {
            "name": "rabbitmq-password",
            "value": "[parameters('rabbitMqPassword')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppBackendName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppCacheName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppRabbitMQName'))]",
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 8080,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "backend",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppBackendName'), ':', parameters('backendImageTag'))]",
              "env": [
                {
                  "name": "ConnectionStrings__MsSql",
                  "secretRef": "sql-connection-string"
                },
                {
                  "name": "LLMClientSettings__ApiKey",
                  "secretRef": "openai-api-key"
                },
                {
                  "name": "AuthenticationSettings__SecretKey",
                  "secretRef": "auth-secret-key"
                },
                {
                  "name": "AuthenticationSettings__Audience",
                  "value": "[parameters('authenticationAudience')]"
                },
                {
                  "name": "AuthenticationSettings__Issuer",
                  "value": "[parameters('authenticationIssuer')]"
                },
                {
                  "name": "SmtpSettings__SmtpHost",
                  "value": "[parameters('smtpHost')]"
                },
                {
                  "name": "SmtpSettings__SmtpPort",
                  "value": "[string(parameters('smtpPort'))]"
                },
                {
                  "name": "SmtpSettings__SmtpUser",
                  "value": "[parameters('smtpUser')]"
                },
                {
                  "name": "SmtpSettings__SmtpPass",
                  "secretRef": "smtp-password"
                },
                {
                  "name": "SmtpSettings__FromEmail",
                  "value": "[parameters('smtpFromEmail')]"
                },
                {
                  "name": "ExchangeRateSettings__ApiUrl",
                  "value": "[parameters('exchangeRateApiUrl')]"
                },
                {
                  "name": "ExchangeRateSettings__ApiEndpoint",
                  "value": "[parameters('exchangeRateApiEndpoint')]"
                },
                {
                  "name": "ExchangeRateSettings__AppId",
                  "secretRef": "exchange-rate-api-app-id"
                },
                {
                  "name": "RabbitMqSettings__HostName",
                  "value": "[variables('containerAppRabbitMQName')]"
                },
                {
                  "name": "RabbitMqSettings__Port",
                  "value": "5672"
                },
                {
                  "name": "RabbitMqSettings__UserName",
                  "value": "[parameters('rabbitMqUsername')]"
                },
                {
                  "name": "RabbitMqSettings__Password",
                  "secretRef": "rabbitmq-password"
                },
                {
                  "name": "LLMProcessorSettings__Token",
                  "secretRef": "llm-processor-api-token"
                },
                {
                  "name": "LLMProcessorSettings__ApiUrl",
                  "value": "[concat('http://', variables('containerAppLLMProcessorName'))]"
                },
                {
                  "name": "CacheSettings__ConnectionString",
                  "secretRef": "cache-connection-string"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 1000,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        },
        "secrets": [
          {
            "name": "registry-password",
            "value": "[parameters('containerRegistryPassword')]"
          },
          {
            "name": "openai-api-key",
            "value": "[parameters('openAiApiKey')]"
          },
          {
            "name": "auth-secret-key",
            "value": "[parameters('authenticationSecretKey')]"
          },
          {
            "name": "smtp-password",
            "value": "[parameters('smtpPassword')]"
          },
          {
            "name": "exchange-rate-api-app-id",
            "value": "[parameters('exchangeRateApiAppId')]"
          },
          {
            "name": "rabbitmq-password",
            "value": "[parameters('rabbitMqPassword')]"
          },
          {
            "name": "llm-processor-api-token",
            "value": "[parameters('llmProcessorApiToken')]"
          },
          {
            "name": "cache-connection-string",
            "value": "[variables('cacheConnectionString')]"
          },
          {
            "name": "sql-connection-string",
            "value": "[variables('sqlConnectionString')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppFrontendName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppBackendName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "frontend",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppFrontendName'), ':', parameters('frontendImageTag'))]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 1000,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        },
        "secrets": [
          {
            "name": "registry-password",
            "value": "[parameters('containerRegistryPassword')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppLLMProcessorName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppRabbitMQName'))]",
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 8000,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "llmprocessor",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppLLMProcessorName'), ':', parameters('llmProcessorImageTag'))]",
              "env": [
                {
                  "name": "OPENAI_API_KEY",
                  "secretRef": "openai-api-key"
                },
                {
                  "name": "RABBITMQ_HOST",
                  "value": "[variables('containerAppRabbitMQName')]"
                },
                {
                  "name": "RABBITMQ_PORT",
                  "value": "5672"
                },
                {
                  "name": "RABBITMQ_USER",
                  "value": "[parameters('rabbitMqUsername')]"
                },
                {
                  "name": "RABBITMQ_PASS",
                  "secretRef": "rabbitmq-password"
                },
                {
                  "name": "API_TOKEN",
                  "secretRef": "llm-processor-api-token"
                },
                {
                  "name": "MCP_API_BASE_URL",
                  "value": "[concat('http://', variables('containerAppBackendName'), '/api/v1/mcp')]"
                },
                {
                  "name": "CONNECTION_STRING",
                  "secretRef": "sql-connection-string"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 1000,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        },
        "secrets": [
          {
            "name": "registry-password",
            "value": "[parameters('containerRegistryPassword')]"
          },
          {
            "name": "openai-api-key",
            "value": "[parameters('openAiApiKey')]"
          },
          {
            "name": "rabbitmq-password",
            "value": "[parameters('rabbitMqPassword')]"
          },
          {
            "name": "llm-processor-api-token",
            "value": "[parameters('llmProcessorApiToken')]"
          },
          {
            "name": "sql-connection-string",
            "value": "[variables('sqlConnectionString')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppGatewayName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "[resourceId('Microsoft.App/containerApps', variables('containerAppFrontendName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "http"
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "gateway",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppGatewayName'), ':', parameters('gatewayImageTag'))]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "cooldownPeriod": 1000,
            "pollingInterval": 30,
            "rules": [
              {
                "name": "http-scaler",
                "custom": {
                  "type": "http",
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        },
        "secrets": [
          {
            "name": "registry-password",
            "value": "[parameters('containerRegistryPassword')]"
          }
        ]
      }
    }
  ],
  "outputs": {
    "managedEnvironmentId": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
    },
    "sqlServerFqdn": {
      "type": "string",
