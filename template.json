{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "production",
      "allowedValues": ["development", "staging", "production"],
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "polandcentral",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "SQL Server administrator login"
      }
    },
    "sqlAdministratorPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server administrator password"
      }
    },
    "containerRegistryServer": {
      "type": "string",
      "defaultValue": "ghcr.io"
    },
    "containerRegistryUsername": {
      "type": "string"
    },
    "containerRegistryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Container registry password"
      }
    },
    "openAiApiKey": {
      "type": "securestring"
    },
    "authenticationSecretKey": {
      "type": "securestring"
    },
    "smtpUser": {
      "type": "string"
    },
    "smtpPassword": {
      "type": "securestring"
    },
    "smtpFromEmail": {
      "type": "string"
    },
    "exchangeRateApiAppId": {
      "type": "securestring"
    },
    "rabbitMqUsername": {
      "type": "string"
    },
    "rabbitMqPassword": {
      "type": "securestring"
    },
    "redisPassword": {
      "type": "securestring"
    },
    "llmProcessorApiToken": {
      "type": "securestring"
    },
    "backendImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "frontendImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "llmProcessorImageTag": {
      "type": "string",
      "defaultValue": "latest"
    },
    "gatewayImageTag": {
      "type": "string",
      "defaultValue": "latest"
    }
  },
  "variables": {
    "resourcePrefix": "finance-app",
    "managedEnvironmentName": "FinanceApp",
    "logAnalyticsWorkspaceName": "[concat(variables('resourcePrefix'), '-logs')]",
    "sqlServerName": "projects-server-sziszka90",
    "sqlDatabaseName": "FinanceAppDB",
    "containerAppFrontendName": "finance-app-frontend"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2023-09-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30,
        "features": {
          "legacy": 0,
          "searchVersion": 1,
          "enableLogAccessUsingOnlyResourcePermissions": true
        },
        "workspaceCapping": {
          "dailyQuotaGb": -1
        },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2024-03-01",
      "name": "[variables('managedEnvironmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2023-09-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2023-09-01').primarySharedKey]"
          }
        },
        "zoneRedundant": false,
        "workloadProfiles": [
          {
            "workloadProfileType": "Consumption",
            "name": "Consumption"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2023-08-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled",
        "restrictOutboundNetworkAccess": "Disabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat(variables('sqlServerName'), '/', variables('sqlDatabaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 2
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 34359738368,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "autoPauseDelay": 60,
        "requestedBackupStorageRedundancy": "Local",
        "minCapacity": 0.5,
        "isLedgerOn": false,
        "useFreeLimit": true,
        "freeLimitExhaustionBehavior": "BillOverUsage"
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppFrontendName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]",
        "workloadProfileName": "Consumption",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "http",
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('containerRegistryPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "frontend",
              "image": "[concat(parameters('containerRegistryServer'), '/sziszka90/', variables('containerAppFrontendName'), ':', parameters('frontendImageTag'))]",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10,
            "rules": [
              {
                "name": "http-scaler",
                "http": {
                  "metadata": {
                    "concurrentRequests": "10"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "managedEnvironmentId": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvironmentName'))]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName')), '2023-08-01-preview').fullyQualifiedDomainName]"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppFrontendName')), '2024-03-01').configuration.ingress.fqdn]"
    }
  }
}
